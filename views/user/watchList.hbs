							<div class="position-relative overflow-hidden d-block align-items-start">
								<div class="box-overlay">
								</div>
								<a href="/course/{{id}}/detail" style="padding: 0px;width: 100%; height: 70%">
									<img style="width: 100%; height: 70%" src="{{avatar_path}}" alt="" />
								</a>
							</div>
							<div class="d-flex flex-column align-items-start bg-white pb-2 px-3 mt-3">
								<a href="/course/{{id}}/detail" style="margin-left: 0px; height: 70px">
									<h5 class="h5" style="width: 100%;">
										{{title}}
									</h5>
								</a>
								<p style="font-size: 13px; color: #0e5ec7">
									Giáo Viên: {{createdName}}
								</p>
								<p class="course-item-description-home" style="font-size: 14px;">
									{{short_description}}</p>
								<p style="font-size: 13px; color: #e6b619"> {{catName}}</p>
							</div>
							<div class="d-flex -flex-column justify-content-between px-3 py-0" style="margin-top: -24px;">
								<p class="text" style="font-size: 14px;">{{review_score}} điểm</p>
								<p class="text-success" style="font-size: 14px;">{{price}}</p>
							</div>
						</a>
					</div>
					{{/each}}
				</div>
			</div>
		</section>
