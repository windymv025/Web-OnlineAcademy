<div class="container py-5">

    {{!-- <img src="{{this.detail.avatar_path}}" style="width: 100%; height: 200px" /> --}}

    <div style="background-image:
           url('{{this.detail.avatar_path}}'); 
    width: 100%; 
    height:300px;
    padding: 30px;
    margin-bottom: 20px; 
    background-position:center;">
        {{!-- <p><a class="btn btn-primary btn-large" href="#">Learn more »</a> <a
                class="btn btn-outline-primary btn-large" href="#">Learn more »</a></p> --}}
    </div>
    <h1>{{this.detail.title}}</h1>
    <p class="col-6">{{this.detail.short_description}}</p>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4" id="headings">
                <div class="card-header">Mô tả khóa học</div>
                <div class="card-body">
                    <h6>{{this.detail.description}}</h6>
                </div>
            </div>
            <div class="card mb-4" id="tables">
                <div class="card-header">Thành viên</div>
                <div class="card-body">
                    <h6>Giảng viên</h6>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><img src="{{this.lectures.avatar_path}}"
                                        style="width: 30px; height: 30px; border-radius: 100px" alt="avatar" /></td>
                                <td>{{this.lectures.name}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <h6>Học sinh </h6>
                    <table class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each this.students}}
                            <tr>
                                <td><img src="{{avatar_path}}" style="width: 20px; height: 20px; border-radius: 100px"
                                        alt="avatar" /></td>
                                <td>{{name}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4" id="content-formatting">
                <div class="card-header">Nội dung khóa học</div>
                <div class="card-body">
                    {{#each this.chapters}}
                    <div class="mb-4">
                        <h6 class="text-primary">
                            Chương {{chapter}}: {{title}}
                        </h6>
                        {{#each lessons}}
                        <div class="ml-4 mt-2 d-flex flex-column">
                            <h7 class="mb-2" style="color:coral;">
                                Bài {{lesson}}: {{title}}
                            </h7>
                            {{#each resources}}
                            <iframe width="400" height="250" src="{{resource_path}}">
                            </iframe>
                            {{/each}}
                        </div>
                        {{/each}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-4" id="forms">
        <div class="card-header">Đánh giá</div>
        <div class="card-body">
            <form>
                <fieldset>
                    <div class="form-group">
                        <label for="exampleInputEmail">Nhập đánh giá của bạn</label>
                        <input class="form-control " id="exampleInputEmail" type="text"
                            placeholder="Nhập đánh giá của bạn">
                    </div>
                    <button class="btn btn-primary" style="float:right" type="submit">Gửi</button>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="card mb-4" id="buttons">
        <div class="card-header">Đánh giá từ học viên</div>
        {{#each this.reviews}}
        <div class="mt-2 ml-4">
            <div class="d-flex flex-row align-items-center mb-2">
                <img src={{avatar_path}} alt="avt" style="width: 30px; height: 30px; border-radius: 100px; margin-right: 16px" />
                <h6>{{name}}</h6>
            </div>
            <p>{{content}}</p>
        </div>
        {{/each}}
    </div>
</div>