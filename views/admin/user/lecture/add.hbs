<div>
    <div class="card">
        <h5 class="card-header">
            THÊM GIÁO VIÊN
        </h5>
        <form class="card-body" method="POST" action="/admin/lecture/add" id="addLecture">
            <div class="form-group col-4">
                <label for="txtName">Họ và tên</label>
                <input type="text" class="form-control" id="name" name="name" autofocus>
                {{#if this.errorName }}
                <p class="text-danger">{{this.errorName}}</p>
                {{else}}

                {{/if}}
            </div>
            <div class="form-group col-4">
                <label for="txtEmail">Email</label>
                <input type="mail" class="form-control" id="email" name="email" autofocus>
                {{#if this.errorMail }}
                <p class="text-danger">{{this.errorMail}}</p>
                {{else}}
                {{/if}}
            </div>
        <div class="card-footer text-muted">
            <a class="btn btn-primary" href="/admin/lecture" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                Back to List
            </a>
            <button type="submit" class="btn btn-outline-success">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </div>        
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#addLecture').validate({
            rules: {
                name: {
                    required: true,
                    remote: {
                        url: '/account/is-available'
                    }
                },
                email: {
                    required: true,
                    email: true
                },
            },
            messages: {
                name: {
                    required: 'Vui lòng nhập họ và tên'
                },
                email: {
                    required: 'Vui lòng nhập email',
                    email: 'Email không đúng định dạng'
                },
            },
            errorElement: 'small',
            errorClass: 'help-block text-danger',
            highlight: function (e) {
                $(e).removeClass('is-valid').addClass('is-invalid');
            },
            unhighlight: function (e) {
                $(e).removeClass('is-invalid').addClass('is-valid');
            }
        });
    });
</script>